[colors]
transparent = #00000000
background = ${xrdb:background:#222}
background-alt = #444
foreground = ${xrdb:foreground:#FFF}
foreground-alt = #666
alert = #bd2c40
; Module colors
wlan = ${xrdb:color6:#9b3dff}
volume = ${xrdb:color8:#c93b2e}
battery = ${xrdb:color1:#3db1ff}
weather = ${xrdb:color8:#c93b2e}
time = ${xrdb:color4:#23cc4d}
date = ${xrdb:color5:#f0cc2b}

[geom]
margin = 2

[bar/main]
dpi = ${xrdb:Xft.dpi:0}
enable-ipc = true

width = 100%
height = 30
;offset-x = 1%
offset-y = 10
radius = 0
fixed-center = true

background = ${colors.transparent}
foreground = ${colors.foreground}

border-size = 0
border-color = #FF000000

padding = 2
module-margin = 0

font-0 = fixed:pixelsize=12;3
font-1 = Symbols Nerd Font:style=2048-em:size=14;4

modules-left = time time_l sep date date_l sep weather weather_l
modules-right = wlan wlan_l sep pulseaudio pulseaudio_l sep battery battery_l
modules-center = bspwm

tray-position = right
tray-padding = 2

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

format-foreground = ${colors.background}

label-focused = 
label-focused-padding = 2

label-occupied = 
label-occupied-padding = 2

label-urgent = 
