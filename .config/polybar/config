ws-icon-0 = code;
ws-icon-1 = browse;
ws-icon-2 = desktop;
ws-icon-3 = music;ﱘ
ws-icon-default = 

[module/sep]
type = custom/text

content = |
content-background = ${root.background}
content-foreground = ${root.background}
content-padding = 1

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

